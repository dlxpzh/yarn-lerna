{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
